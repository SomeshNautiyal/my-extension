{
  "manifest_version": 3,
  "name": "Background Color Changer",
  "version": "1.0",
  "description": "Change the background color of the current tab.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
